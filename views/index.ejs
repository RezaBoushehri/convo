<%-include('partials/header.ejs') %>
    <div id="alert"></div>

    <div id="main">
        <div id="btns">
            <div class="row mt-5">
                <button class="btn btn-primary col-12 m-2" data-toggle="modal" data-target="#joinRoom">Join a room</button>
                <button class="btn btn-danger col-12 m-2" onclick="createRoom()">Create a room</button>
            </div>
            <div class="modal fade" id="joinRoom" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Join a room</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                            <input type="text" placeholder="Enter room name" id='roomName'>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" onclick='joinRoom()'>Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="chat-window" class="rounded overflow-auto shadow" style='display:none'>

            <div id="output" class="p-3 container">
            </div>
            <div id="feedback" class='p-3'></div>
            <button id="up" class="btn btn-warning m-2 text-white" onclick="scrollUp()"></i></button>

        </div>
        <div class='form-inline'>
            <input class='form-control col-8 ' type="text" placeholder="Type your message ..." id="message">
            <button class="form-control align-center btn btn-danger col-2">
            <input type="file" accept="image/*" id="file-input">
            <label class="input-label  " for="file-input"><i class="fa fa-camera"></i></label>
        </button>
            <button class="btn btn-primary form-control col-2 " type="submit" id="button"><i
                class="fa fa-paper-plane"></i></button>
        </div>
    </div>

    <script src='../chat.js'>
    </script>
    </body>

    </html>